<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-5">
      <h4 class="body text-primary">新規クリエイター登録(Sign up)</h4>
      <% if @creator.errors.any? %>
        <%= @creator.errors.count %>件のエラーが発生しました
        <ul>
          <% @creator.errors.full_messages.each do |message| %>
            <li class="alert alert-danger"><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-2"></div>
    <div class="col-9">
  <%= form_with model: @creator, url: creator_registration_path, local: true do |f| %>
  <%= render "creators/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :penname %><br />
    <%= f.text_field :penname %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions mt-2">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
</div>
</div>
</div>