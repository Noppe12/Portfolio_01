<div class="container">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <div class="h4 font-weight-bold">
        投稿一覧(全<%= @count %>件)
      </div>
      <div class="row">
         <% @items.each do |item| %>
         <div class="col-md-3">
           <div class="card md-2">
             <div class="card">
               <div class="card-img-top">
                 <%= link_to admin_item_path(item.id) do %><%= attachment_image_tag item, :image, :fill, 150, 80 %><% end %>
               </div>
               <div class="card-body text-start">
                 <div class="small">
                   <%= item.image_name %>
                 </div>
               </div>
             </div>
           </div>
         </div>
         <% end %>
      </div>
      <div class="d-flex align-items-center justify-content-center">
           <%= paginate @items %>
      </div>
    </div>
  </div>
</div>