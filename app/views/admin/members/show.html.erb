<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3">
      <h4 class="daimei"><%= @member.nickname %>さんの情報詳細</h4>
    </div>
  </div>
  <div class="bigbox1">
    <table class='table tablebox'>
      <tr>
        <th>メンバーID</th>
        <td><%= @member.id %></td>
      </tr>
      <tr>
        <th>ニックネーム</th>
        <td><%= @member.nickname %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @member.email %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td>
          <% if @member.is_active %>
            有効
          <% else %>
            退会
          <% end %>
        </td>
      </tr>
    </table>
    <%= link_to "編集する", edit_admin_member_path(@member.id), class:"btn btn-sm btn-success", data: {"turbolinks" => false} %>
    <%= link_to "メンバー一覧を見る", admin_members_path, class:"btn btn-sm btn-info", data: {"turbolinks" => false} %>
    </div>
</div>