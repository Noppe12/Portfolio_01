<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3">
      <h4 class="daimei">メンバー一覧</h4>
    </div>
  </div>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>メンバーID</th>
        <th>ニックネーム</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @members.each do |member| %>
        <tr>
          <td><%= member.id %></td>
          <td><%= link_to admin_member_path(member.id) do %><%= member.nickname %><% end %></td>
          <td><%= member.email %></td>
          <td>
            <% if member.is_active %>
              有効
            <% else %>
              退会
            <% end %>
          </td>
        </tr>
      <% end %>
      <%= paginate @members %>
    </tbody>
  </table>
</div>