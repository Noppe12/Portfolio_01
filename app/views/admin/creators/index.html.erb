<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3">
      <h4 class="daimei">クリエイター一覧</h4>
    </div>
  </div>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>クリエイターID</th>
        <th>ペンネーム</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @creators.each do |reat| %>
        <tr>
          <td><%= reat.id %></td>
          <td><%= link_to admin_creator_path(reat.id) do %><%= reat.penname %><% end %></td>
          <td><%= reat.email %></td>
          <td>
            <% if reat.is_active %>
              有効
            <% else %>
              退会
            <% end %>
          </td>
        </tr>
      <% end %>
      <%= paginate @creators %>
    </tbody>
  </table>
</div>