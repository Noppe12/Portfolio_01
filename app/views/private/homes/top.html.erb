<div class="container">
  <div class="row mt-2">
    <div class="col-1"></div>
    <div class="col-4 h3 font-weight-bold text-primary">
      クリエイタートップ
    </div>
  </div>
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <div class="mt-2 mb-2 h4 font-weight-bold">
        投稿いいねランキング
      </div>
      <div class="row">
         <% @items.each do |item| %>
         <div class="col-md-3">
           <div class="card md-2">
             <div class="card">
               <div class="card-img-top">
                 <%= attachment_image_tag item, :image, :fill, 150, 80 %>
               </div>
               <div class="card-body text-start">
                 <div class="small">
                   <%= item.image_name %>
                 </div>
               </div>
             </div>
           </div>
         </div>
         <% end %>
      </div>
      <div class="mt-2 mb-2 h4 font-weight-bold">
        新規クリエイター
      </div>
      <div class="row">
        <% @creators.each do |creator| %>
        <div class="col-md-3">
          <%= creator.penname %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>