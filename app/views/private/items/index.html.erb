<div class="container">
  <div class="row mt-2 mb-2">
    <div class="col-1"></div>
    <div class="col-7">
      <div class="h4 font-weight-bold">
        投稿一覧
      </div>
    </div>
    <div class="col-2">
      <%= link_to "新規投稿", new_private_item_path, class:"btn btn-sm btn-success text-right" %>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-9 d-flex">
      <% @items.each do |item| %>
        <div class="col-md-3">
          <div class="card md-2">
            <div class="card">
              <div class="card-img-top">
                <%= link_to private_item_path(item.id) do %><%= attachment_image_tag item, :image, :fill, 170, 90 %><% end %>
              </div>
              <div class="card-body text-start">
                <div class="small">
                  <%= item.image_name %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="d-flex align-items-center justify-content-center">
      <%= paginate @items %>
    </div>
  </div>
</div>