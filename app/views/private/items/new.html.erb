<div class="container">
  <div class="row mt-2 mb-2">
    <div class="col-1"></div>
    <div class="col-8">
      <div class="h4 font-weight-bold">
        新規投稿
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <%= form_with model: @item, url: private_items_path, method: :POST, local:true do |f| %>
        <table class="table">
          <tr class="mb-2">
            <th class="label">画像名</th>
            <td>
              <%= f.text_field :image_name %>
            </td>
          </tr>
          <tr class="mb-2">
            <th class="label">画像</th>
            <td>
              <%= f.attachment_field :image %>
            </td>
          </tr>

          <tr class="mb-2">
            <th class="label">画像説明</th>
            <td><%= f.text_area :introduction, class:"form-control  introduction", rows:"5" %></td>
          </tr>
        </table>
        <div class="action mt-3">
          <%= f.submit '新規登録', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>