<div class="container">
  <div class="row mb-2">
    <div class="col-1"></div>
    <div class="col-4">
      <h5 class="mt-3 font-weight-bold text-primary">クリエイターマイページ</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-2"></div>
    <div class="col-10">
      <div class="h5 col-3 font-weight-bold">登録情報</div>
      <div class="col-10 mb-3 d-flex align-items-end justify-content-end">
        <%= link_to edit_private_creator_path(@creator.id), class:"btn btn-success" do %>編集する<% end %>
      </div>

      <table class='table table-hover table-inverse'>
        <tr>
          <th>ペンネーム</th>
          <td><%= @creator.penname %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @creator.email %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-9">
     <% @items.each do |item| %>
       <div class="col-md-3">
         <div class="card md-2">
           <div class="card">
             <div class="card-img-top">
               <%= link_to private_item_path(item.id) do %><%= attachment_image_tag item, :image, :fill, 170, 90 %><% end %>
             </div>
             <div class="card-body text-start">
               <div class="small">
                 <%= item.image_name %>
               </div>
             </div>
           </div>
         </div>
       </div>
     <% end %>
     </div>
  </div>
</div>