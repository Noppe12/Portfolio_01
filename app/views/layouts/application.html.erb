<!DOCTYPE html>
<html>
  <head>
    <title>Portfolio01</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if creator_signed_in? %>
      <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container">
            <div><%= link_to 'クリエイター用画像投稿サイト', private_top_path, class: "navbar-brand" %></div>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <div class="search_form">
                  <%= form_with url: searches_path, local: true, method: :get do |f| %>
                    <%= f.text_field :word %>
                    <%= f.select :range, options_for_select([["クリエイター","customer"], ["投稿","toukou"]]) %>
                    <% f.hidden_field :search, :value => form_with %>
                    <%= f.submit "検索", class: "btn btn-primary" %>
                  <% end %>
                </div>
              </li>
              <li class="nav-item">
                <%= link_to 'マイページ', creators_mypage_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to '投稿一覧', private_items_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to '問い合わせ', new_private_contact_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to 'ログアウト', destroy_creator_session_path, method: :delete, class: 'nav-link text-light' %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
  <% elsif member_signed_in? %>
      <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container">
            <div><%= link_to 'クリエイター用画像投稿サイト', topafter_path, class: "navbar-brand" %></div>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">

            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <div class="search_form">
                  <%= form_with url: searches_path, local: true, method: :get do |f| %>
                    <%= f.text_field :word %>
                    <%= f.select :range, options_for_select([["クリエイター","customer"], ["投稿","toukou"]]) %>
                    <% f.hidden_field :search, :value => form_with %>
                    <%= f.submit "検索", class: "btn btn-primary" %>
                  <% end %>
                </div>
              </li>
              <li class="nav-item">
                <%= link_to 'マイページ', members_mypage_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to '投稿一覧', items_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to 'クリエイター一覧', creators_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to 'ログアウト', destroy_member_session_path, method: :delete, class: 'nav-link text-light' %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
  <% elsif admin_signed_in? %>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <div><%= link_to 'クリエイター用画像投稿サイト', admin_top_path, class: "navbar-brand" %></div>
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <div class="search_form">
                  <%= form_with url: searches_path, local: true, method: :get do |f| %>
                    <%= f.text_field :word %>
                    <%= f.select :range, options_for_select([["クリエイター","customer"], ["投稿","toukou"]]) %>
                    <% f.hidden_field :search, :value => form_with %>
                    <%= f.submit "検索", class: "btn btn-primary" %>
                  <% end %>
                </div>
              </li>
              <li class="nav-item">
                <%= link_to '投稿一覧', admin_items_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to 'メンバー一覧', admin_members_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to 'クリエイター一覧', admin_creators_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'nav-link text-light' %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
  <% else %>
    <header class="fixed-top">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <div><%= link_to 'クリエイター用画像投稿サイト', root_path, class: "navbar-brand" %></div>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <%= link_to 'クリエイター新規登録', new_creator_registration_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to 'クリエイターログイン', new_creator_session_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to 'メンバー新規登録',  new_member_registration_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to 'メンバーログイン', new_member_session_path, class: 'nav-link text-light' %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
  <% end %>
  <main class="mb-auto">
    <%= yield %>
  </main>
  <footer>
    <div class='container mt-5'>
      <div class='row'>
        </div>
    </div>
  </footer>
  </body>
</html>
