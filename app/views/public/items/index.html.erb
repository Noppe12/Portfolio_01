<div class="container">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-10">
      <div class="h4 mt-3 font-weight-bold">
        投稿一覧(全 <%= @count %> 件)
      </div>
      <div class="row">
         <% @items.each do |item| %>
          <div class="card md-2" style="width: 18rem;">
            <div class="bd-placeholder-img card-img-top" width="100%" height="280">
              <%= link_to item_path(item.id) do %><%= attachment_image_tag item, :image, :fill, 285, 100 %><% end %>
            </div>
            <div class="card-body">
              <div class="card-text">
                <%= item.image_name %>
              </div>
            </div>
          </div>
         <% end %>
      </div>
      <div class="d-flex align-items-center justify-content-center">
           <%= paginate @items %>
      </div>