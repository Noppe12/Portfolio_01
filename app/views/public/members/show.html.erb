<div class="container">
  <div class="row mb-2">
    <div class="col-1"></div>
    <div class="col-3">
      <h5 class="mt-3 font-weight-bold text-success">マイページ</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-2"></div>
    <div class="col-10">
      <div class="h5 col-3 font-weight-bold">登録情報</div>
      <div class="col-10 mb-3 d-flex align-items-end justify-content-end">
        <%= link_to members_edit_path(@member.id), class:"btn btn-success" do %>編集する<% end %>
      </div>

      <table class='table table-hover table-inverse'>
        <tr>
          <th>ニックネーム</th>
          <td><%= @member.nickname %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @member.email %></td>
        </tr>
      </table>
    </div>
  </div>
</div>