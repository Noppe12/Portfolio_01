<div class="container">
  <div class="row mb-3">
    <div class="col-1"></div>
    <div class="col-3">
      <h5 class="mt-3 font-weight-bold text-success">メンバー情報編集</h5>
    </div>
  </div>
  <div class="row m-2">
    <div class="col-2"></div>
    <div class="col-8">
      <%= form_with model: @member, url: public_members_path, method: :patch, local: true do |f| %>
        <table>
          <tr>
            <th class="col-2">ニックネーム</th>
            <td class="col-4"><%= f.text_field :nickname %></td>
          </tr>
          <tr>
            <th class="col-2">メールアドレス</th>
            <td class="col-4"><%= f.text_field :email %></td>
          </tr>
          <% f.hidden_field :is_active, value: true %>
        </table>
        <div class='col-8 btn-toolbar mt-3' role="toolbar">
        <div class="col-4">
          <%= f.submit '編集内容を保存', class:"btn btn-success" %>
        </div>
        <div class="col-4 d-flex align-items-end justify-content-end">
          <%= link_to "退会する", members_check_path, class: "btn btn-danger", "data-confirm" => "本当に退会しますか？" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>