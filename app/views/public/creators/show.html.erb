<div class="container">
  <div class="row mt-2">
    <div class="col-1"></div>
    <div class="col-8">
      <div class="h4 font-weight-bold">
        クリエイター詳細
      </div>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-2"></div>
    <div class="col-9">
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>ペンネーム</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @creator.penname %></td>
          </tr>
        </tbody>
      </table>
      <div class="row mt-2">
        <% @items.each do |item| %>
         <div class="col-md-3">
           <div class="card md-2">
             <div class="card">
               <div class="card-img-top">
                 <%= link_to item_path(item.id) do %><%= attachment_image_tag item, :image, :fill, 150, 90 %><% end %>
               </div>
               <div class="card-body text-start">
                 <div class="small">
                   <%= item.image_name %>
                 </div>
               </div>
             </div>
           </div>
         </div>
        <% end %>
      </div>
    </div>
  </div>
</div>