<div class="container">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <div class="mt-3 mb-2 h4 font-weight-bold">
        クリエイター一覧(全 <%= @count %> 名)
      </div>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>ペンネーム</th>
            </tr>
          </thead>
          <tbody>
            <% @creators.each do |creator| %>
            <tr>
              <td><%= link_to creator_path(creator.id) do %><%= creator.penname %><% end %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="d-flex align-items-center justify-content-center">
           <%= paginate @creators %>
      </div>
    </div>
  </div>
</div>