<% if current_member.already_favorited?(item) %>
  <%= link_to item_favorite_path(item), method: :delete, class: "goodLink", remote: true do %>
    <i class="fas fa-heart"></i>
  <% end %>
<% else %>
  <%= link_to item_favorites_path(item), method: :post, class: "goodLink", remote: true do %>
    <i class="far fa-heart"></i>
  <% end %>
<% end %>
<p class="favoriteCount">いいね数　　　　　  <%= item.favorites.count %></p>