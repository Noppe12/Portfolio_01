<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <% if @range == "customer" %>
    <tbody>
      <% @customers.each do |creator| %>
        <tr>
          <td><%= creator.penname %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <tbody>
      <% @toukous.each do |item| %>
        <tr>
          <td><%= attachment_image_tag item, :image, :fill, 200, 200 %></td>
          <td><%= item.image_name %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>